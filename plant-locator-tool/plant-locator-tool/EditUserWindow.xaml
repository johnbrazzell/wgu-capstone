<Window x:Class="plant_locator_tool.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:plant_locator_tool"
        mc:Ignorable="d"
        Title="EditUserWindow" Height="450" Width="800">
    <StackPanel>
        <Label x:Name="nameOfUserLabel" Content="Update with username"/>
        <Label Content="Change Username:"/>
        <TextBox x:Name="usernameTextBox"/>
        <Label Content="Change Admin Status"/>
        <CheckBox x:Name="isAdminCheckBox"/>
        <Button x:Name="saveButton" Content="Save" Click="saveButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" Click="cancelButton_Click"/>
    </StackPanel>
</Window>
