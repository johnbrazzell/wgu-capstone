<Window x:Class="plant_locator_tool.AddPlantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:plant_locator_tool"
        mc:Ignorable="d"
        Title="AddPlantWindow" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
         
            <Label Content="Location Name:" Margin="10"/>
        <Label Content="Location Products:"/>
        <Label Content="Location Street"/>
        <Label Content="City"/>
        <Label Content="State"/>
        <Label Content="Zip"/>
        <Button Content="Add"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
        
            <TextBox Margin="10"/>
            <TextBox Margin="10"/>
            <TextBox Margin="10"/>
            <TextBox Margin="10"/>
            <TextBox Margin="10"/>
            <TextBox Margin="10"/>

            <Label Content="Cancel"/>

    </StackPanel>
    </Grid>
</Window>
