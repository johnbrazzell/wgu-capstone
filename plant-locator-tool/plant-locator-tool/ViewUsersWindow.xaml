<Window x:Class="plant_locator_tool.ViewUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:plant_locator_tool"
        mc:Ignorable="d"
        Title="View Users" Height="450" Width="800">
    <StackPanel>
        <ListView x:Name="userListView"/>
        <Button x:Name="editUserButton" Content="Edit User" Click="editUserButton_Click"/>
        <Button x:Name="deleteUserButton" Content="Delete User" Click="deleteUserButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" Click="cancelButton_Click"/>
    </StackPanel>
</Window>
