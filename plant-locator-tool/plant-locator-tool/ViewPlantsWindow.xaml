<Window x:Class="plant_locator_tool.ViewPlantsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:plant_locator_tool"
        mc:Ignorable="d"
        Title="ViewPlantsWindow" Height="450" Width="800">
    <StackPanel>
        <ListView>
            <GridView>
                <GridViewColumn Header="Plant ID"/>
                <GridViewColumn Header="Plant Name"/>
                <GridViewColumn Header="Plant Address"/>
                <GridViewColumn Header="Phone Number"/>
                <GridViewColumn Header="Updated By"/>
                <GridViewColumn Header="Update Date"/>
            </GridView>
        </ListView>
    </StackPanel>
</Window>
