<Window x:Class="plant_locator_tool.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:plant_locator_tool"
        mc:Ignorable="d"
        Title="Add User" Height="450" Width="800">
    <StackPanel>
        <Label Content="Username"></Label>
        <TextBox x:Name="usernameTextBox"></TextBox>
        <Label Content="Password"></Label>
        <PasswordBox x:Name="passwordBox"></PasswordBox>
        <Label Content="Admin"/>
        <CheckBox x:Name="isAdminCheckbox"/>

        <Button x:Name="addUserButton" Click="addUserButton_Click" Content="Add" />
        <Button x:Name="cancelButton" Click="cancelButton_Click" Content="Cancel" />
    </StackPanel>
</Window>
